{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "experimentalDecorators": true, 
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./", 
    "paths": {
      "test/*": ["./test/*"],
      "src/*":["./src/*"]
    },                           
    "rootDirs": ["./src/*", "./test/*", "./www/*"],                           
    "sourceMap": true,                      
    "outDir": "./dist",                   
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,
    "strict": true,                    
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules", "dist"
  ]
}